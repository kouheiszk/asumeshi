<div class="section no-pad-bot">
  <div class="container">
    <% if @materials.present? %>
        <% if @debug_mode %>
            <h5 class="header"><%= t("yesterday_eat") %></h5>
            <p><%= @title %></p>
            <table class="striped">
              <thead>
              <tr>
                <th data-field="name">Name</th>
                <th data-field="confidence">Confidence</th>
              </tr>
              </thead>
              <tbody>
              <% @materials.each do |m| %>
                  <tr>
                    <td><%= m.klass.names %></td>
                    <td><%= m.confidence %></td>
                  </tr>
              <% end %>
              </tbody>
            </table>
        <% end %>

        <h5 class="header"><%= t("tomorrow_should_eat") %></h5>
        <div class="row">
          <% @suggestions.each do |s| %>
              <div class="col s12 m6">
                <div class="card">
                  <div class="card-image">
                    <%= image_tag(s.image_url || "http://placehold.jp/150x150.png") %>
                  </div>
                  <div class="card-content">
                    <p><%= s.title %></p>
                  </div>
                  <div class="card-action">
                    <%= link_to t("see_recipe"), s.url, target: :blank %>
                  </div>
                </div>
              </div>
          <% end %>
        </div>

        <h5 class="header"><%= t("retry") %></h5>
    <% end %>

    <%= render "form", title: @title, debug: @debug_mode %>
  </div>
</div>
