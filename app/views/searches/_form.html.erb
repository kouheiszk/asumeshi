<%= form_tag(search_path, method: :get, class: "col s12") do %>
    <div class="row">
      <div class="input-field col s12">
        <%= text_field_tag :keywords, keywords %>
        <%= label_tag :keywords, t("what_eaten") %>
      </div>
    </div>
    <div class="row center">
      <%= submit_tag t("submit"), class: "btn-large waves-effect waves-light deep-orange" %>
    </div>
<% end %>
