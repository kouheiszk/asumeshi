<div class="container">
  <div class="row justify-content-center">
    <div class="col-xs-12">
      <%= image_tag 'logo.png', style: 'max-width: 100%;' %>
    </div>
  </div>

  <% if current_user.blank? %>
      <div class="row">
        <div class="col-6">
          <%= link_to '今日何食べる？', new_kondate_path, class: 'btn btn-primary btn-block' %>
        </div>
        <div class="col-6">
          <%= link_to 'FBでログイン', user_facebook_omniauth_authorize_path, class: 'btn btn-secondary btn-block' %>
        </div>
      </div>
  <% else %>
      <div class="row justify-content-center">
        <div class="col-md-6 col-xs-12">
          <%= link_to '今日何食べる？', new_kondate_path, class: 'btn btn-primary btn-block' %>
        </div>
      </div>
  <% end %>
</div>
